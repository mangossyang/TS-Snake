{
    "compilerOptions": {
        //指定es编译版本
        //"ES3", "ES5", "ES6", "ES2015", "ES2016", "ES2017", "ES2018", "ES2019", "ES2020", "ESNext"
        "target": "es6",
        //指定使用模块化的规范
        //"CommonJS", "AMD", "System", "UMD", "ES6", "ES2015", "ES2020", "ESNext","None"
        "module":"ES6",
        //编译后的文件目录
        // "outDir": "./dist",
        //合并文件
        // "outFile": "./dist/app.js"
        //是否对js文件进行编译 默认false
        // "allowJs": false,
        //检查js代码是否符合规范
        // "checkJs": false,
        //移除注释
        // "removeComments": false,
        //有错误是编译不生成文件
        // "noEmitOnError": true,
        //不允许隐式类型的any
        // "noImplicitAny": true
        //严格检查空值
        // "strictNullChecks": true
        //所有严格检查的开关
        "strict": true,
        "noEmitOnError":true
    }
}
